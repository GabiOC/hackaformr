<%= form_for @hackathon do |f| %>
<div class="form">
  <%= f.label :name, "Hackathon Name" %><br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :start_date, "Start Date" %><br>
  <%= f.date_field :start_date %>
  <br>
  <%= f.label :end_date, "End Date" %><br>
  <%= f.date_field :end_date %>
  <br>
  <%= f.label :location, "Location" %><br>
  <%= f.text_field :location %>
  <br>
  <%= f.label :max_team_size, "Max Team Size" %><br>
  <%= f.number_field :max_team_size %>
  <br>
  <%= f.label :description, "Description" %><br>
  <%= f.text_area :description %>
</div>
<%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
